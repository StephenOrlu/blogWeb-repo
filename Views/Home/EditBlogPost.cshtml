@using Microsoft.AspNetCore.Http
@model Assignment2.Models.BlogPosts

@{
    Layout = "_Layout";
    ViewBag.Title = "Edit Blog";
}

<div class="container">
    <form asp-controller="Home" asp-action="EditBlogPost" method="post" class="col s12">
        <input type="hidden" value="@Model.BlogPostId" name="BlogPostId" />

        <div class="form-group col-sm-8">
            <label for="text">Title: </label>
            <input asp-for="Title" class="form-control" type="text" placeholder="Title" />
        </div>

        <div class="form-group col-sm-8">
            <label for="text">Posts: </label>
            <textarea asp-for="Content" class="form-control" typeof="text" data-length="5000"></textarea>
        </div>

        <div class="col-sm-8">
            <button type="submit" class="btn btn-success col-sm-8">Submit</button>
        </div>
    </form>
</div>