
@using Microsoft.AspNetCore.Http
@model Assignment2.Models.BlogPosts
@{
    Layout = "_Layout";
    ViewBag.Title = "Add Blog";
}

// For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860

<form asp-controller="Home" asp-action="AddBlogPost" method="post">
    <div class="form-group">

        <div class="form-group col-sm-8">
            <label for="text"> Title:</label>
            <input type="text" asp-for="Title" class="form-control" placeholder="Title" />
        </div>
        <div class="form-group col-sm-8">
            <label for="text"> Post</label>
            <textarea type="text" asp-for="Content" class="form-control" data-length="5000"></textarea>
        </div>


    </div>

    <button type="submit" class="btn btn-success col-sm-8">Submit</button>
</form>